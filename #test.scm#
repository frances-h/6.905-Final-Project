;;;

(load "load")


(define net (make-model (list
			 (make-fully-connected 1 3  #f
					       matrix:sigmoid
					       matrix:dir_sigmoid)
			 (make-fully-connected 3 1 #f
					       bypass
					       matrix:ones_2d)


			 )))





(let training-loop (( i 0))
  (if (= i 100)
      '()
      (begin
	(net `backwards! d_squared-error #(#(8)) 
	     (net `forward-layers #(#(1))) 0.2)
       
	(net `backwards! d_squared-error #(#(2)) 
	     (net `forward-layers #(#(2))) 0.2)
	(pp "*************")
	(pp (net `forward #(#(1))))

	(training-loop (+ i 1)))))



